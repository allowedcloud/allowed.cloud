<!DOCTYPE html>
<html lang="{{ meta.lang }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ meta.title }}</title>

    <link rel="stylesheet" href="{{ '/assets/styles/main.css' | url }}">

    {% eleventyGoogleFonts 'https://fonts.googleapis.com/css2?family=Oleo+Script:wght@700&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,400;1,500&family=Judson:ital,wght@0,400;0,700;1,400&display=swap' %}

    {% include "meta.njk" %}
</head>
<body>
    {% iconsprite %}
    <a href="#main" class="sr-skip-link">skip to main content</a>

    <div class="layout" role="document">
        {% include "header.njk" %}
        <main id="main" class="main" tabindex="-1">
            {{ content | safe }}
        </main>
        {% include "footer.njk" %}
    </div>

    <script type="text/javascript" src="{{ '/assets/scripts/main.js' | url }}"></script>
    <script type="text/javascript">
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/serviceworker.js')
        }
    </script>
</body>
</html>
